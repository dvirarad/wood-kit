{
  "name": "woodkits-backend",
  "version": "1.0.0",
  "description": "Node.js API backend for Wood Kits e-commerce platform",
  "main": "server.js",
  "scripts": {
    "start": "nodemon server.js",
    "start:prod": "node server.js",
    "dev": "nodemon server.js",
    "test:server": "NODE_ENV=test node server.js",
    "seed": "node scripts/seed-database.js",
    "seed:verify": "node scripts/seed-database.js verify",
    "test": "jest --detectOpenHandles",
    "test:watch": "jest --watch --detectOpenHandles",
    "test:coverage": "jest --coverage --detectOpenHandles",
    "test:e2e": "jest ../tests/e2e/complete-product-flow.test.js --detectOpenHandles --forceExit"
  },
  "keywords": [
    "nodejs",
    "express",
    "ecommerce",
    "api",
    "woodworking"
  ],
  "author": "Wood Kits Team",
  "license": "MIT",
  "dependencies": {
    "@sendgrid/mail": "^8.1.5",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "dotenv": "^16.3.1",
    "express": "^4.18.2",
    "helmet": "^7.1.0",
    "joi": "^17.11.0",
    "mongoose": "^8.0.3",
    "morgan": "^1.10.0",
    "nodemailer": "^7.0.5",
    "stripe": "^14.7.0"
  },
  "devDependencies": {
    "@types/nodemailer": "^7.0.1",
    "jest": "^29.7.0",
    "nodemon": "^3.0.2",
    "supertest": "^6.3.3"
  },
  "engines": {
    "node": ">=18.0.0"
  },
  "jest": {
    "testEnvironment": "node",
    "setupFilesAfterEnv": [
      "<rootDir>/jest.setup.js"
    ],
    "collectCoverageFrom": [
      "**/*.js",
      "!node_modules/**",
      "!coverage/**",
      "!jest.config.js",
      "!jest.setup.js"
    ],
    "testMatch": [
      "**/__tests__/**/*.js",
      "**/?(*.)+(spec|test).js"
    ],
    "testTimeout": 30000,
    "forceExit": true,
    "detectOpenHandles": true,
    "maxWorkers": 1
  }
}
